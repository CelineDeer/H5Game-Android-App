<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/light_gray"
android:orientation="horizontal">
    <LinearLayout
            android:id="@+id/category_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sky_item_click_selector"
            android:paddingLeft="12dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

        <TextView android:id="@+id/title1"
                  android:textSize="18sp"
                  android:textColor="@color/light_blank"
                  android:drawableLeft="@drawable/icon_left_line"
                  android:layout_marginTop="12dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/description1"
                  android:textSize="14sp"
                  android:textColor="@color/light_more_gray"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="12dp"
                  android:lines="2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/category_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sky_item_click_selector"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

        <TextView android:id="@+id/title2"
                  android:textSize="18sp"
                  android:textColor="@color/light_blank"
                  android:drawableLeft="@drawable/icon_left_line"
                  android:layout_width="wrap_content"
                  android:layout_marginTop="12dp"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/description2"
                  android:textSize="14sp"
                  android:lines="2"
                  android:textColor="@color/light_more_gray"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="12dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>



